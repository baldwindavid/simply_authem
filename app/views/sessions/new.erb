<div class="login">
  <h2>Login</h2>
	<% form_tag sessions_path do %>
	<p>
	  <%= SimplyAuthem.config['authentication_field_label_name'] %>: <%= text_field_tag :authentication_field %>
	</p>
	<p>
		Password: <%= password_field_tag :password %>
	</p>
	<p><%= submit_tag "Login"%></p>
	<% end %>

</div>